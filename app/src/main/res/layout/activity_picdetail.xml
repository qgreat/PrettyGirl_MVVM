<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <data>

        <variable
            name="viewModel"
            type="com.prettygirl_mvvm.viewmodel.PicDetailViewModel" />

        <import type="com.prettygirl_mvvm.model.Pic"/>
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{((Pic)viewModel.detail).spotName}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{@string/productPrice(((Pic)viewModel.detail).price??@string/zero)}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{((Pic)viewModel.detail).detailInfo}" />
    </LinearLayout>
</layout>
